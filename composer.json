{
    "name": "aviator/html",
    "license": "MIT",
    "require": {
        "php" : ">=7.2.0",
        "cocur/slugify": "^4.0",
        "aviator/delegate": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "vimeo/psalm": "^3.2",
        "larapack/dd": "^1.1",
        "illuminate/support": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Aviator\\Html\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Aviator\\Html\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --no-coverage",
        "coverage": "phpunit --coverage-html reports/coverage",
        "stat": "psalm"
    }
}
